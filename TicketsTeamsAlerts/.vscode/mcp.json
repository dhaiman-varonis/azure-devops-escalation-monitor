{
  "servers": {
    "github": {
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "Azure DevOps - VaronisIO": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@azure-devops/mcp",
        "${input:ado_org}"
      ]
    },
    "Microsoft Teams": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@microsoft/teams.mcp"
      ]
    }
  },
  "inputs": [
    {
      "id": "ado_org",
      "type": "promptString",
      "description": "Azure DevOps Organization Name",
      "default": "VaronisIO"
    }
  ]
}